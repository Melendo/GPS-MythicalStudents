<script>
    document.addEventListener('DOMContentLoaded', function() {
        var currentUrl = window.location.pathname;
        var menuItems = document.querySelectorAll('.navbar-nav .nav-link');

        menuItems.forEach(function(item) {
            var link = item.getAttribute('href');
            
            if (
                (link === currentUrl) || 
                (currentUrl.startsWith('/album/') && link === '/estanteriaVirtual') ||
                (currentUrl === '/mostrarColecciones' && link === '/estanteriaVirtual') ||
                (currentUrl.startsWith('/mostrarAlbumColeccion') && link === '/estanteriaVirtual')
            ) {
                item.classList.add('active');
            } else {
                item.classList.remove('active');
            }
            
        });
    });
</script>

