<div class="titulo-container">
    <div class="dropdown">
        <% if (user.IMAGEN) { %>
            <img src="data:image/png;base64,<%= Buffer.from(user.IMAGEN.data).toString('base64') %>" alt="Foto de perfil" class="rounded-circle img-fluid" width="40" height="40"/>
            <% } else { %>
            <img src="/images/iconoBase.png" alt="Foto de perfil" class="rounded-circle img-fluid" width="40" height="40"/>
          <% } %>
        <a class="btn-perfil dropdown-toggle text-decoration-none rounded" href="#" role="button" id="dropdownMenuLink" data-bs-toggle="dropdown" aria-expanded="false">
            <%= user.NOMBRE_USUARIO %>
        </a>
        <ul class="dropdown-menu" aria-labelledby="dropdownMenuLink">
            <li><label class="dropdown-item"><strong><%= user.EMAIL %></strong></label></li>
            <li><a class="cerrarSesion dropdown-item text-danger text-decoration-none" href="#" id="cerrarSesion">Cerrar sesiÃ³n</a></li>
        </ul>
    </div>
    <h1 class="titulo"><%= titulo %></h1>
    <div class="monedas-container">
        <span class="monedas-icon">&#x1F4B0;</span> <!-- Icono de monedas -->
        <span class="monedas-cantidad"><%= user.MONEDAS %></span> <!-- Contador de monedas -->
    </div>
</div>