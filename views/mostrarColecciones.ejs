<body>

    <h1 class="titulo">LISTA DE COLECCIONES</h1>

    <div class="container">
        <div class="row">
            <% for (var i=0; i < colecciones.length; i++) { %>
               
                    <div class="col-sm-2 album">
                        <a href="/album/<%= colecciones[i].ID %>">
